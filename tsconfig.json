{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noImplicitAny": false
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }  